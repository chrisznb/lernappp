-- ============================================
-- HIGH PRIORITY: Organization Archetypes
-- ============================================

INSERT INTO cards (user_id, subject_id, card_type, front, back, tags) VALUES
('12439635-0b75-466d-bd9a-f2e98dcc3756', 'f1c31287-e2d3-4981-ae57-717a34d7551c', 'basic',
'Functional Organization: Definition und Merkmale',
'**Functional Organization**

Definition:
- Gliederung nach betrieblichen Funktionen
- Departments: Marketing, Finance, Production, HR, etc.

Vorteile:
- Hohe Spezialisierung und Expertise
- Economies of Scale
- Klare Karrierepfade innerhalb der Funktion
- Effiziente Ressourcennutzung

Nachteile:
- Silodenken (Functional Silos)
- Langsame Entscheidungsprozesse
- Schlechte Koordination zwischen Funktionen
- Fokus auf Funktion statt auf Produkt/Kunde',
ARRAY['organization', 'archetypes', 'hr', 'exam']);

INSERT INTO cards (user_id, subject_id, card_type, front, back, tags) VALUES
('12439635-0b75-466d-bd9a-f2e98dcc3756', 'f1c31287-e2d3-4981-ae57-717a34d7551c', 'basic',
'Functional Organization: Wann einsetzen?',
'**Wann Functional Organization?**

Geeignet für:
✓ Single-Product-Unternehmen
✓ Traditionelle Unternehmen mit klarem Fokus
✓ Stabilität und Effizienz wichtiger als Flexibilität
✓ Hohe Spezialisierung erforderlich
✓ Beispiel aus Exam: "Windshield wiper business - other products hardly play a role"

Nicht geeignet für:
✗ Multi-Product-Unternehmen
✗ Verschiedene Märkte/Regionen
✗ Schnelle Anpassung erforderlich',
ARRAY['organization', 'archetypes', 'hr', 'exam']);

INSERT INTO cards (user_id, subject_id, card_type, front, back, tags) VALUES
('12439635-0b75-466d-bd9a-f2e98dcc3756', 'f1c31287-e2d3-4981-ae57-717a34d7551c', 'basic',
'Divisional Organization: Definition und Merkmale',
'**Divisional Organization**

Definition:
- Gliederung nach Produkten, Regionen, Kunden oder Märkten
- Jede Division ist quasi ein "Mini-Unternehmen"

Vorteile:
- Klare Produkt-/Marktzuständigkeit
- Schnelle Entscheidungen
- Fokus auf Kunden/Markt
- Flexibilität und Anpassungsfähigkeit
- Klare P&L Verantwortung

Nachteile:
- Duplikation von Ressourcen (teuer!)
- Keine Economies of Scale
- Konkurrenz zwischen Divisionen
